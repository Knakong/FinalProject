<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="JPAPaseo">
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider </provider>


		<class>com.skilldistillery.paseo.entities.User</class>
		<class>com.skilldistillery.paseo.entities.Address</class>
		<class>com.skilldistillery.paseo.entities.FollowedUser</class>
		<class>com.skilldistillery.paseo.entities.FollowedUserKey</class>
		<class>com.skilldistillery.paseo.entities.Gender</class>
		<class>com.skilldistillery.paseo.entities.PreferredGender</class>
		<class>com.skilldistillery.paseo.entities.PreferredGenderKey</class>
		<class>com.skilldistillery.paseo.entities.Message</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkCategory</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkCategoryKey</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkLocation</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkLocationKey</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkType</class>
		<class>com.skilldistillery.paseo.entities.PreferredWalkTypeKey</class>
		<class>com.skilldistillery.paseo.entities.UserWalk</class>
		<class>com.skilldistillery.paseo.entities.UserWalkKey</class>
		<class>com.skilldistillery.paseo.entities.WalkCategory</class>
		<class>com.skilldistillery.paseo.entities.Walk</class>
		<class>com.skilldistillery.paseo.entities.WalkImage</class>
		<class>com.skilldistillery.paseo.entities.WalkLocation</class>
		<class>com.skilldistillery.paseo.entities.WalkType</class>
		

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/paseodb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
			<property name="javax.persistence.jdbc.user" value="paseo" />
			<property name="javax.persistence.jdbc.password" value="paseo" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="5" />
			<property name="hibernate.c3p0.min_size" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.timeout" value="60" />
		</properties>
	
	
	
	
	
	</persistence-unit>
</persistence>
